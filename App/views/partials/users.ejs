                    <!-- Dashboard content -->
                    <div class="row">
                        <div id="main">
                            <h1>Users List</h1>

                            <table class="table table-bordered table-striped" id="usersTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Email</th>
                                        <th>Password</th>
                                        <th>Status</th>
                                        <th>Options</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(function(user) { %>
                                        <tr>
                                            <td>
                                                <%= user.id %>
                                            </td>
                                            <td>
                                                <span class="editable" id="email_<%= user.id %>">
                                                    <%= user.email %>
                                                </span>
                                                <input type="text" class="form-control hidden"
                                                    id="email_input_<%= user.id %>" value="<%= user.email %>">
                                            </td>
                                            <td>
                                                <%= user.password %>
                                            </td>
                                            <td>
                                                <% if (user.status) { %>
                                                    <span class="badge badge-danger">Banned</span>
                                                    <% } else { %>
                                                        <span class="badge badge-success">Active</span>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <a href="/admin/edit/<%= user.id %>" class="btn btn-primary edit-button"
                                                    data-id="<%= user.id %>">Edit</a>
                                                <a href="/admin/delete/<%= user.id %>" class="btn btn-danger">Delete</a>
                                                <a href="/admin/edit/status/<%= user.id %>"
                                                    class="btn btn-info ban-button" data-id="<%= user.id %>">
                                                    <%= user.status ? 'Unban' : 'Ban' %>
