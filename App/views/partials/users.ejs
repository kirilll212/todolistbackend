    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#usersTable').DataTable({
                "lengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]],
                "pageLength": 25
            });
        });

    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const editButtons = document.querySelectorAll(".edit-button");
            editButtons.forEach(function (button) {
                button.addEventListener("click", async function (event) {
                    event.preventDefault();
                    const userId = this.getAttribute("data-id");
                    const emailSpan = document.getElementById(`email_${userId}`);
                    const emailInput = document.getElementById(`email_input_${userId}`);
                    const saveButton = this;

                    if (emailInput.classList.contains("hidden")) {
                        emailSpan.classList.add("hidden");
                        emailInput.classList.remove("hidden");
                        saveButton.textContent = "Save";
                    } else {
                        const newEmail = emailInput.value;

                        try {
                            const response = await axios.put(`/admin/edit/${userId}`, { newEmail });

                            if (response.status === 200) {
                                emailSpan.textContent = newEmail;
                                emailSpan.classList.remove("hidden");
                                emailInput.classList.add("hidden");
                                saveButton.textContent = "Edit";
                            } else {
                                console.error("Помилка при оновленні email.");
                            }
                        } catch (error) {
                            console.error("Помилка при відправці PUT-запиту: " + error);
                        }
                    }
                });
            });
            const banButtons = document.querySelectorAll(".ban-button");

            banButtons.forEach(function (button) {
                button.addEventListener("click", async function (event) {
                    event.preventDefault();
                    const userId = this.getAttribute("data-id");
                    const banButton = this;
                    const isBanned = banButton.textContent === "Ban";

                    try {
                        const response = await axios.put(`/admin/edit/status/${userId}`);

                        if (response.status === 200) {
                            if (isBanned) {
                                banButton.textContent = "Unban";
                            } else {
                                banButton.textContent = "Ban";
                            }
                            location.reload()
                        } else {
                            console.error("Помилка при оновленні статусу.");
                        }
                    } catch (error) {
                        console.error("Помилка при відправці PUT-запиту: " + error);
                    }
                });
            });
        });
    </script>

